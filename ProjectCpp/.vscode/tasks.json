{
  "version": "2.0.0",
  "tasks": [
      {
          "type": "shell",
          "label": "C/C++: g++.exe build active file",
          "command": "C:\\Programs\\MinGW64\\bin\\g++.exe",
          "args": [
              "-std=c++11",
              "-O2",
              "-Wall",
              "-g",
              "${workspaceFolder}/*.cpp",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "isDefault": true,
              "kind": "build"
          }
      }
  ]
}